{
  "compilerOptions": {
    "target": "ES2020",
    "moduleResolution": "Node",
    "noImplicitAny": false,
    "removeComments": false,
    "module": "CommonJS",
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "preserveConstEnums": false,
    "sourceMap": true
  },
  "include": ["src/**/*"],
  "exclude": ["node_modules", "**/*.spec.ts"]
}